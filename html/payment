    <script>
        // Get URL params
        const params = new URLSearchParams(window.location.search);
        const selectedRank = params.get("s");

        if (selectedRank) {
            const rankDropdown = document.getElementById("rank");
            if (rankDropdown) {
                const index = parseInt(selectedRank);
                if (!isNaN(index) && index >= 1 && index < rankDropdown.options.length) {
                    rankDropdown.selectedIndex = index;
                }
            }
        }
    </script>

